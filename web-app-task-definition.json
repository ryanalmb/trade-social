{
  "family": "crypto-platform-dev-web-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::645634482532:role/crypto-platform-dev-ecs-task-execution",
  "taskRoleArn": "arn:aws:iam::645634482532:role/crypto-platform-dev-ecs-task",
  "containerDefinitions": [
    {
      "name": "web-app",
      "image": "node:20-alpine",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "development"
        },
        {
          "name": "PORT",
          "value": "8080"
        },
        {
          "name": "NEXTAUTH_URL",
          "value": "http://crypto-platform-dev-alb-505391454.us-east-1.elb.amazonaws.com"
        },
        {
          "name": "NEXTAUTH_SECRET",
          "value": "demo-secret-key-change-in-production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://crypto_admin:TempPassword123!@crypto-platform-dev-postgres.c8kzlqkzlqkz.us-east-1.rds.amazonaws.com:5432/crypto_platform"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://crypto-platform-dev-redis.11x6lq.0001.use1.cache.amazonaws.com:6379"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/crypto-platform-dev/web-app",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:8080/api/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      },
      "command": [
        "sh",
        "-c",
        "apk add --no-cache wget && echo 'console.log(\"Web App Service Started\"); const express = require(\"express\"); const app = express(); app.get(\"/api/health\", (req, res) => res.json({status: \"healthy\", service: \"web-app\", timestamp: new Date().toISOString()})); app.get(\"/health\", (req, res) => res.json({status: \"healthy\", service: \"web-app\", timestamp: new Date().toISOString()})); app.get(\"/\", (req, res) => res.send(\"<h1>ðŸš€ Enterprise Crypto Trading Platform</h1><p>Web App Service is running!</p><p>Status: <span style=\\\"color:green\\\">Healthy</span></p><p><a href=\\\"/api/health\\\">Health Check</a></p>\")); app.listen(8080, () => console.log(\"Web App listening on port 8080\"));' > app.js && node app.js"
      ]
    }
  ],
  "tags": [
    {
      "key": "Name",
      "value": "crypto-platform-dev-web-app"
    },
    {
      "key": "Service",
      "value": "web-app"
    },
    {
      "key": "Environment",
      "value": "dev"
    }
  ]
}
